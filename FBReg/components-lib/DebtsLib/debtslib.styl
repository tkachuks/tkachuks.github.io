#debts
  border-radius 7px
  margin 7px 7px
  .img_apply
    fill: var(--aquamarine)
    width 18px
    height 18px
  .img_refresh
    fill: var(--aquamarine)
    width 18px
    height 18px
  .img_delete
    fill: var(--sec-bgcolor)
    width 18px
    height 18px
  .img-wrap
    display flex
    align-items center
    justify-content center
    webkit-margin-end 0.4rem
    -moz-margin-end 0.4rem
    margin-inline-end 0.4rem
  .spin
    animation 1s spin infinite linear
    @keyframes spin
      from
        transform rotate(0deg)
      to
        transform rotate(360deg)
  .debt-header
    background-color #fff
    border-top-left-radius 8px
    border-top-right-radius 8px
    height 4em
    display flex
    justify-content space-between
    align-items center
    border: 1px solid #dedeff;
    // margin-bottom 2px
    .header-text
      margin auto 10px
      font-size 1.5em
      font-weight 700
      display flex
      .total-debts-wrap
        -webkit-margin-start 1rem
        -moz-margin-start 1rem
        margin-inline-start 1rem
        font-weight 500
    label
      margin auto 10px
      font-size 1.5em
      font-weight 700
    p
      font-size 14px
      color #5e36b1
      -webkit-padding-start 6px
      -moz-padding-start 6px
    .btn-header
      display flex
      -webkit-padding-end 14px
      -moz-padding-end 14px
      align-items center
      .btn-header-wrap
        display flex
  .debt-body
    // background-color #fff
    .debt-list
      border-top 1px solid #dedeff
      min-height 4em
      display flex
      justify-content space-between
      background-color #fff
      .left-side
        display flex
        width 70%
        margin auto 10px
        flex-direction column
        .debt-list-date
          color var(--dark-color)
          font-size 0.8em
          font-weight 600
        .rtl-side
          direction ltr
          flex-direction row-reverse
          display flex
        .debt-list-name
          display flex
          font-size 1.3em
          flex-direction row
          .debt-list-desc
            -webkit-margin-start 10px
            -moz-margin-start 10px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
          .full-debt
            white-space pre-line
            max-height: unset 
            overflow: unset;
            display flex
      .right-side
        display flex
        align-items center
        padding-inline-end 0.7rem
        -webkit-padding-end 0.7rem
        -moz-padding-end 0.7rem
  .debt-active
    background-color #fff
    .edit
      margin 3px 10px
      label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
      .description
        margin-top 7px
        border-radius 4px
        height 56px
        display flex
        box-shadow inset 0 1px 3px 0 var(--sec-color)
        background-image linear-gradient(to bottom, #f8f8ff, #efefff)
        align-items center
        justify-content space-between
        .description-input
          -webkit-padding-start 6px
          -moz-padding-start 6px
          background-color transparent
          border none
          font-size 16px
          width 100%
          height 100%
          &:focus
            outline none
        .btn-desc-del
          display flex
          -webkit-padding-end 14px
          -moz-padding-end 14px
      .edit-debt-head
        display flex
        align-items center
        justify-content space-between
        padding-top 15px
        label
          font-size 0.8em
          font-weight 600
          color var(--dark-color)
        .count
          display flex
          justify-content flex-end
          align-items center
          .ink
            width 28px
            height 28px
            display flex
            border 1px solid #bfafe0;
            border-radius 100%
            justify-content center
            align-items center
            span
              margin auto
          .count-input
            width 15%
            border none
            font-size 16px
            text-align center
            padding 0 10px
            -webkit-padding-end 10px
            -moz-padding-end 10px
            &:focus
              outline none
          .currency-debt
            -webkit-padding-start 10px
            -moz-padding-start 10px
      .actions
        display flex
        justify-content flex-end
        padding 10px 0 10px
        .button-apply
          display flex
          align-items center
          color var(--aquamarine)
        .del-debts
          display flex
          -webkit-margin-end 26px
          -moz-margin-end 26px
          align-items center
          color var(--sec-bgcolor)
          img
            width 18px
  .debt-footer
    background-color #fff
    width 100%
    height 4em
    display flex
    justify-content space-between
    margin-top 3px
    label
      color var(--dark-color)
      font-size 0.8em
      font-weight 700
      margin auto 10px
    img
      padding-inline-end 0.7rem
      -webkit-padding-end 0.7rem
      -moz-padding-end 0.7rem
  .bot-border
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    margin-bottom 7px
  .hidden
    display none
