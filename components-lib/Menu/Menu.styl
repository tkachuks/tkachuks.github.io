.no-scroll
  overflow hidden
#menu_modal
    position fixed
    top 0
    left 0
    z-index 9999
    width 100%
    height 100vh
    height calc(var(--vh, 1vh) * 100)
    overflow auto
    background-color rgba(4, 4, 15, 0.4)
  .menu_container
    display flex
    justify-content flex-end
    margin 0 auto
    min-height 100%
    max-width 640px
    overflow-x hidden
  .menu_wrap
    width 80%
    min-height 100%
  .list-wrap
    height 100%
  .menu
    .menu-logo
      position relative
      background-image linear-gradient(125deg, #9370e6 3%, #7534f8 42%, #4f2da7 93%)
      display flex
      justify-content flex-end
      align-items center
      padding .6rem 1rem
      color #fff
      min-height 10rem
      .top-background
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        overflow hidden
        background-image linear-gradient(105deg, rgba(147, 112, 230, 0) 3%, rgba(117, 52, 248, 0) 43%, rgba(79, 45, 167, 0.7) 94%)
        img
          width 100%
      .business_container
        display flex
        flex-direction column
        text-align center
        z-index 1
        padding-inline-start 1rem
        -webkit-padding-start 1rem
        -moz-padding-start 1rem
        .neon-light
          display flex
          justify-content center
          align-items center
          width 4rem
          height 4rem
          background-color var(--white-color)
          box-shadow 0 0 15px 0 rgba(255, 255, 255, 0.5)
          border-radius 50%
          .logo_wrap
            display flex
            justify-content center
            align-items center
            border-radius 50%
            width 3.5rem
            height 3.5rem
            background-image linear-gradient(to bottom, #966eff, #4f2da7)
      .logo
        display flex
        justify-content center
        align-items center
        z-index 1   
  .menu
    height 100%
    display flex
    flex-direction column
  .menu-list
    display flex
    flex-direction column
    flex-grow 1
    padding 0.5rem 0
    background-color var(--white-color)
  .list-item
    min-height 3.375rem
    -moz-padding-end 1.125rem
    -webkit-padding-end 1.125rem
    padding-inline-end 1.125rem
    -moz-padding-start 0.3rem
    -webkit-padding-start 0.3rem
    padding-inline-start 0.3rem
    box-sizing border-box
    list-style none
    display flex
  .installed
    display none
  .item-link
    display flex
    justify-content flex-end
    align-items center
    text-decoration none
    word-break break-word
    width 100%
    font-weight 500
    font-size 1rem
    color var(--main-color)
    text-align end
  .menu-img-wrap
    display flex
    justify-content center
    align-items center
    -moz-margin-start 1.375rem
    -webkit-margin-start 1.375rem
    margin-inline-start 1.375rem
  .menu-img
    height 1.5rem
    width 1.5rem

  .animation_rtl
    animation openMenu_rtl 0.3s
  .animation_ltr
    animation openMenu_ltr 0.3s
  .close_animation_rtl
    animation closeMenu_rtl 0.3s forwards
  .close_animation_ltr
    animation closeMenu_ltr 0.3s forwards
@keyframes openMenu_rtl
  0%
    transform translateX(-100%)
@keyframes closeMenu_rtl
  100%
    transform translateX(-100%)
@keyframes closeMenu_ltr
  100%
    transform translateX(100%)

@keyframes openMenu_ltr
  0%
    transform translateX(100%)
