.shared_checkbox_wrap {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  .shared_checkbox_label {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    -moz-padding-start: 0.75rem;
    -webkit-padding-start: 0.75rem;
    padding-inline-start: 0.75rem;
    font-size: 0.875rem;
    margin: 0;
  }
}
.shared_checkbox {
  -moz-appearance: none;
  -webkit-appearance: none;
  box-sizing: content-box;
  border: solid 0.1rem var(--dark-color);
  background-color: rgba(79, 45, 167, 0.16);
  transition: background-color 0.3s;
  border-radius: 0.2rem;
  min-width: 1.25em;
  min-height: 1.25em;
  outline: none;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shared_checkbox:checked:before{
  content: '';
  display: block;
  width: 0.25rem;
  height: 0.55rem;
  border: solid var(--white-color);
  border-width: 0 0.15rem 0.15rem 0;
  animation: checked-animation 0.5s;
  transform: rotate(45deg);
}
.shared_checkbox:checked {
  background-color: var(--dark-color);
  transition: background-color 0.3s;
}
@keyframes checked-animation {
  0% {
    opacity: 0;
    transform: scale(0);
  }
}
