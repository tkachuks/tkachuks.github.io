.no-scroll
  overflow hidden
#menu_modal
    position fixed
    top 0
    left 0
    z-index 9999
    width 100%
    height 100%
    overflow auto
    background-color rgba(255, 255, 255, 0.88)
  .menu_container
    margin 0 auto
    height 100%
    max-width 640px
  .menu_wrap
    width 60%
    height 100%
    background-color #fff
    background-position -300px 0px
    background-repeat no-repeat
    background-size cover
    color #fff
  .list-wrap
    background-color rgba(79, 45, 167, 0.7)
    height 100%
  .menu
    .menu-logo
      height 25%
      display flex
      flex-direction column
      justify-content center
      align-items center
      padding .6rem 1rem
      color #fff
      .logo
          display flex
          justify-content center
          align-items center
          width 77px
          height 77px
          border-radius 50%
          // background-color #fff
          object-fit cover
          .business_logo
            width 77px
            height 77px
            border-radius 50%
            object-fit cover
      .business_name
          font-size .9rem
          font-weight 500
          margin .6rem 0 .5rem
      .business_address
        font-size .75rem
        text-align center
        .business_address_img
          width .7rem
          height .7rem
          margin-inline-end .4rem
  .menu
    height 100%
    display flex
    flex-direction column
  .menu-list
    display flex
    flex-direction column
    flex-grow 1
  .list-item
    padding-inline-start 1.4rem
    box-sizing border-box
    list-style none
    flex-grow 1
    display flex
    border-top 1px solid #B7ACCF
  .item-link
    display flex
    align-items center
    text-decoration none
    width 100%
    font-weight 500
    font-size .9rem
    color #fff
    text-align start
  .menu-img
    margin-inline-end 1.4rem
    height 25px
    width 25px