.edit-note
  border-top 1px solid #dedeff
  border-bottom 1px solid #dedeff
  background-color: #fff
  .img_apply
    fill: var(--aquamarine)
    width 18px
    height 18px
  .img_refresh
    fill: var(--aquamarine)
    width 18px
    height 18px
  .img_delete
    fill: var(--sec-bgcolor)
    width 18px
    height 18px
  .img-wrap
    display flex
    align-items center
    justify-content center
    webkit-margin-end 0.4rem
    -moz-margin-end 0.4rem
    margin-inline-end 0.4rem
  .spin
    animation 1s spin infinite linear
    @keyframes spin
      from
        transform rotate(0deg)
      to
        transform rotate(360deg)
  .edit-note-dody
    padding 0 0.8rem
  .one-note
    font-size 12px
    font-weight bold
    line-height 2
  .description
    display flex
    align-items center
    border-radius 4px
    box-shadow 0 2px 4px 0 rgba(191, 175, 224, 0.3)
    background-image linear-gradient(to bottom, #f8f8ff, #efefff)
    .description-area
      background-color transparent
      padding 5px
      resize none
      border none
      outline none
      line-height 1.43
      letter-spacing 0.2px
      width 90%
      font-family inherit
    .cancel-search
      width 10%
  .reminder
    .reminder-wrap
      padding 1.5rem 0 1rem
      .on-set-reminder
        display flex
        justify-content space-between
      .switch
        display flex
        align-items center
        border none
        height 1rem
        width 40px
        background-color #EFEFFF
        .switch-toggle
          width 20px
          height 20px
          box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.24), 0 0 1px 0 rgba(0, 0, 0, 0.12)
          background-image linear-gradient(to bottom, #e1d8f2, #bfafe0)
      .on
        background-color rgba(82, 47, 169, 0.32)
        .switch-toggle
          width 20px
          height 20px
          box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.24), 0 0 1px 0 rgba(0, 0, 0, 0.12)
          background-image linear-gradient(to bottom, #8a5cd4, #522fa9)
    .set-reminder
      display flex
      align-items center
      .img-wrap
        display flex
        align-items center
        justify-content center
      img
        -webkit-margin-end 0.4rem
        -moz-margin-end 0.4rem
        margin-inline-end 0.4rem
        height 20px
        width 20px
      span
        font-size 12px
        font-weight bold
        line-height 2
        color var(--dark-color)
    .reminder-time
      display flex
      align-items center
      padding-top 0.5rem
      justify-content space-between
  .actions-note
    display flex
    justify-content flex-end
    padding 0.6rem 0.8rem
    border-top 1px solid rgba(222, 222, 255, 0.3 )
    .delete
      display flex
      align-items center
      outline none
      background-color transparent
      border none
      font-size 14px
      font-weight 500
      color var(--sec-bgcolor)
      img
        width 18px
        height 18px
    .save
      font-size 14px
      font-weight 500
      color: var(--aquamarine)
      display flex
      align-items center
      padding 0
      border none
      outline none
      background-color transparent
      webkit-margin-start 1rem
      -moz-margin-start 1rem
      margin-inline-start 1rem
  // .hidden
  //   display none
  .input-wrap
    display flex
    align-items center
    // justify-content flex-end
    flex-grow 1
    justify-content center
    .reminder-in
      font-size 12px
      font-weight bold
      color var(--dark-color)
      webkit-padding-end 1rem
      -moz-padding-end 1rem
      padding-inline-end 1rem
    .ink
      width 28px
      height 28px
      display flex
      border 1px solid #bfafe0;
      border-radius 100%
      justify-content center
      align-items center
    .count-input
      height 40px
      width 30%
      border none
      font-size 16px
      background-color transparent
      color rgba(34, 34, 34, 0.87)
      text-align center
      &:focus
        outline none
    .total-input
      width 25%
    input:disabled
      background-color transparent
  .select-wrap
    min-width 45%
    height 100%
  #select-main
    width 90%
    color #bdadde
    font-size 16px
    height 100%
    position relative
    .active
      height 2.4rem
      border-radius 4px
      box-shadow 0 2px 4px 0 rgba(191, 175, 224, 0.3)
      border solid 1px #efefff
      position inherit
      .icon
        display flex
        align-items center
        justify-content center
        padding 0
        flex-grow 1
    .active-name
      display flex
      width 75%
      justify-content center
      align-items center
      line-height 1
      height 100%
    .options
      border none
    .options
      display flex
      flex-direction: column
      align-items center
      top 0
      border-radius: 4px;
      box-shadow: 0 2px 4px 0 rgba(191, 175, 224, 0.3);
      border: solid 1px #efefff;
      padding 0
      div
        padding 0.5rem 0
        -moz-padding-start: 1rem
        -webkit-padding-start: 1rem
        padding-inline-start 1rem
        width 85%
      div:not(:last-child)
        border-bottom 1px solid var(--sec-color)